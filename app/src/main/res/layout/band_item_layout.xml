<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_5"
    android:layout_marginRight="@dimen/margin_5"
    app:cardCornerRadius="@dimen/margin_5"
    app:cardElevation="@dimen/margin_3"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/band_item_border"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_8">

        <TextView
            android:id="@+id/band_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/margin_5"
            android:paddingStart="@dimen/margin_5"
            android:text="band_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/margin_5"
            android:paddingStart="@dimen/margin_5"
            android:text="/" />

        <TextView
            android:id="@+id/band_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/margin_5"
            android:paddingStart="@dimen/margin_5"
            android:text="band_genre" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/margin_5"
            android:paddingStart="@dimen/margin_5"
            android:text="/" />

        <TextView
            android:id="@+id/band_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/margin_5"
            android:paddingStart="@dimen/margin_5"
            android:text="band_country" />

    </LinearLayout>

</android.support.v7.widget.CardView>